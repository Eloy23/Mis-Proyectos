<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.com.uteach.uteach.Aboutus">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher_real"
                app:layout_constraintBottom_toTopOf="@+id/textView21"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="200dp"
                android:layout_height="85dp"
                android:layout_marginEnd="144dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="144dp"
                android:layout_marginStart="16dp"
                android:text="Acerca de Nosotros"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:text="¿Quiénes somos?"
                android:textAlignment="center"
                android:textSize="25sp"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="248dp"
                android:layout_marginLeft="60dp"/>


            <TextView
                android:layout_width="300dp"
                android:layout_height="150dp"

                android:layout_marginLeft="20dp"
                android:text="El equipo de UTeach esta conformado por personas altamente capacitadas, apasionados, generosos, dedicados, serios y siempre listos para emprender nuevas experiencias. \n

UTeach se basa en la confianza de la comunidad estudiantil y docente de la Universidad Tecnologica de Gutierrez Zamora." />

            <TextView
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:text="Nuestros Valores"
                android:textAlignment="center"
                android:textSize="25sp"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="248dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="260dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:text="#1- Compartir Conocimiento:UTeach esta conformado por una comunidad de profesores altamente competentes listos para compartir sus conocimientos y transmitir el amor por sus pasiones a los estudiantes.\n

#2-Aprender en Confianza:Perfiles verificados, comentarios y opiniones, alumnos y profesores motivados son algunos de los motivos para aprender y transmitir todo en tranquilidad.\n

#3- Brindar Seguridad: Contamos con las mejores medidas tecnológicas para garantizar una experiencia unica, segura e inigualable a todos nuestros usuarios." />

            <TextView
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:text="Fundadores"
                android:textAlignment="center"
                android:textSize="25sp"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="248dp"
                android:layout_marginLeft="60dp"/>

            <ImageButton
            android:id="@+id/user1"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/u1"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:text="Eloy Marcos Dominguez"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="248dp"
                android:layout_marginLeft="60dp"/>
            <ImageButton
                android:id="@+id/user2"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/u2"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:text="Ana Yamileth Garcia Ramirez"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="248dp"
                android:layout_marginLeft="60dp"/>

            <ImageButton
                android:id="@+id/user3"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/u1"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:text="Jose Enrique Nuñez Bautista"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="248dp"
                android:layout_marginLeft="60dp"/>


        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>
